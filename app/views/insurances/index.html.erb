<div class="row-fluid">
  <div class="span9">
    <h1>Krankenkassen</h1>
  </div>
  <div class="span3">
    <br>
    <%= link_to raw('<i class="icon-plus"></i>  Krankenkasse anlegen'), new_insurance_path, class:"btn btn-block" %>
  </div>
</div>
  <table class="table table-hover" data-provides="rowlink">
    <% @insurances.each do |insurance| %>
    <tr>
      <td>
        <%= link_to insurance.name, insurance, class:"rowlink" %>
      </td>
      <colspan>
      <td class="span1">
        <%= link_to raw('<i class="icon-pencil" style="color:white"></i>'), edit_insurance_path(insurance), class:"btn btn-small btn-primary" %>
      </td>

      <td class="span1">
        <%= link_to raw('<i class="icon-trash" style="color:white"></i>'), insurance, class:"btn  btn-small btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </colspan>
    </tr>
    <% end %>
  </table>
</div>
